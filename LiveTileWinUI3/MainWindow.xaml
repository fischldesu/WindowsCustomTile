<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LiveTileWinUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveTileWinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LiveTileWinUI3">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <NavigationView x:Name="view" IsBackButtonVisible="Collapsed" SelectionChanged="view_SelectionChanged" Loaded="view_Loaded">
        <NavigationView.MenuItems>
            <NavigationViewItem x:Name="navigationDefaultItem" Tag="main" Content="Quick Set">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xF407;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Tag="xmlEditor" Content="Xml Text Editor">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE74C;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Tag="interval" Content="Timer">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE916;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Icon="Globe" Tag="httpsrv" Content="HTTP Xml Server" />
        </NavigationView.MenuItems>
        <Frame x:Name="frame"/>
    </NavigationView>
</Window>
