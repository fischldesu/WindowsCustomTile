<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LiveTileWinUI3.Pages.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveTileWinUI3.Pages"
    xmlns:Components="using:LiveTileWinUI3.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="32">Edit Tile Xml</TextBlock>
        <Components:TileXmlEditor x:Name="editor" Margin="0 16" Grid.Row="1"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button x:Name="selectFile" Click="selectFile_Click" Margin="0 0 8 0">Select a File</Button>
            <Button
            x:Name="submit"
            HorizontalAlignment="Right"
            Style="{StaticResource AccentButtonStyle}"
            Click="submit_Click">Submit</Button>
        </StackPanel>
        <InfoBar
            x:Name="info"
            Grid.Row="0"
            Grid.RowSpan="3"
            Canvas.ZIndex="10"
            IsClosable="True" 
            IsOpen="False" 
            Title="Info bar title" 
            Message="Uninitialized Infobar message" 
            Severity="Warning"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"/>
    </Grid>

</Page>
