<?xml version="1.0" encoding="utf-8"?>
<Page  
   x:Class="LiveTileWinUI3.Pages.Interval"  
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
   xmlns:local="using:LiveTileWinUI3.Pages"  
   xmlns:Components="using:LiveTileWinUI3.Components"  
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
   mc:Ignorable="d">  

   <Grid Padding="32">  
        <Grid.RowDefinitions>  
           <RowDefinition Height="42"/>  
           <RowDefinition Height="*"/>  
           <RowDefinition Height="Auto"/>  
        </Grid.RowDefinitions>  
        <Grid.ColumnDefinitions>  
            <ColumnDefinition Width="*"/>  
            <ColumnDefinition Width="Auto"/>  
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="32">Timer</TextBlock>  
        <Border Grid.Row="1" Grid.Column="0"   
               BorderThickness="1 1 0 1" BorderBrush="#2b2b2b64"
                CornerRadius="8 0 0 8"   
               Margin="0 16"
               Background="#0f808080">
            <TabView x:Name="items" AddTabButtonClick="items_AddTabButtonClick" SelectionChanged="items_SelectionChanged"/>
        </Border>  
        <Border Grid.Row="1" Grid.Column="1"  
                BorderThickness="1" BorderBrush="#2b2b2b64" CornerRadius="0 8 8 0"   
                Margin="0 16"  
                Background="#20808080">
            <Grid Padding="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>  
               </Grid.RowDefinitions>  
               <StackPanel Grid.Row="0" Orientation="Vertical">
                    <Button x:Name="selectFile" Click="selectFile_Click" HorizontalAlignment="Stretch">Select a File</Button>
                    <Button x:Name="randomize" Click="randomize_Click" HorizontalAlignment="Stretch" Margin="0 8" ToolTipService.ToolTip="Randomize list on the left">Randomize</Button>
                </StackPanel>  
                <Button Grid.Row="1" x:Name="clear" Click="clear_Click" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Claer all xml text" Style="{StaticResource RedButtonStyle}" CornerRadius="4">Clear</Button>
           </Grid>  
        </Border>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Width="192">
                <NumberBox x:Name="timeInput" Minimum="0" Height="32" CornerRadius="6 0 0 6" Value="1" SpinButtonPlacementMode="Compact" SmallChange="1"  LargeChange="10" />
                <ComboBox x:Name="timeFormat" Height="32" SelectedIndex="1" CornerRadius="0 6 6 0" Margin="-1 0 0 0">
                    <x:String>Hour</x:String>
                    <x:String>Minute</x:String>
                    <x:String>Second</x:String>
                </ComboBox>
            </StackPanel>
            <Button x:Name="submit" Height="32" Click="submit_Click" Style="{StaticResource AccentButtonStyle}">Submit</Button>
        </StackPanel>
        <InfoBar
           x:Name="info"  
           Grid.Row="0"    Grid.RowSpan="3"
           Grid.Column="0" Grid.ColumnSpan="2"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center"
           IsClosable="True"   
           IsOpen="False"
           Title="Info bar title"   
           Message="Uninitialized Infobar message"   
           Severity="Warning"
           Canvas.ZIndex="10"
           Margin="0 0 0 16"
           />  
   </Grid>  
</Page>
