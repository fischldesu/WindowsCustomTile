<?xml version="1.0" encoding="utf-8"?>
<Page  
   x:Class="LiveTileWinUI3.Pages.Interval"  
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
   xmlns:local="using:LiveTileWinUI3.Pages"  
   xmlns:Components="using:LiveTileWinUI3.Components"  
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
   mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="32">Timer</TextBlock>
        <Grid Grid.Row="1" Margin="0 32" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="2" Style="{StaticResource BorderSectionStyle}">
                <TabView x:Name="items" AddTabButtonClick="items_AddTabButtonClick" SelectionChanged="items_SelectionChanged" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            </Border>
            <StackPanel Name="RightPanelTop" Grid.Column="1"  Orientation="Vertical" Spacing="8">
                <Button x:Name="selectFile" Click="selectFile_Click" HorizontalAlignment="Stretch">Select a file</Button>
                <Button x:Name="randomize" Click="randomize_Click" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Randomize list on the left">Randomize</Button>
            </StackPanel>
            <StackPanel Name="RightPanelBottom" Grid.Column="1" Grid.Row="1" Orientation="Vertical" Spacing="8">
                <Button Grid.Row="1" x:Name="clear" Click="clear_Click" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Clear all xml text" Style="{StaticResource RedButtonStyle}" CornerRadius="4">Clear</Button>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Width="192">
                <NumberBox x:Name="timeInput" Minimum="0" Height="32" CornerRadius="6 0 0 6" Value="1" SpinButtonPlacementMode="Compact" SmallChange="1"  LargeChange="10" />
                <ComboBox x:Name="timeFormat" Height="32" SelectedIndex="1" CornerRadius="0 6 6 0" Margin="-1 0 0 0">
                    <x:String>Hour</x:String>
                    <x:String>Minute</x:String>
                    <x:String>Second</x:String>
                </ComboBox>
            </StackPanel>
            <Button x:Name="submit" Height="32" Click="submit_Click" Style="{StaticResource AccentButtonStyle}">Submit</Button>
        </StackPanel>
        <InfoBar
           x:Name="info"  
           Grid.Row="0"    Grid.RowSpan="3"
           Grid.Column="0" Grid.ColumnSpan="2"
           VerticalAlignment="Bottom"
           HorizontalAlignment="Center"
           IsClosable="True"   
           IsOpen="False"
           Title="Info bar title"   
           Message="Uninitialized Infobar message"   
           Severity="Warning"
           Canvas.ZIndex="10"
           Margin="0 0 0 16"
           />
    </Grid>
</Page>
