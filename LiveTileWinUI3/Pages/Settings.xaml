<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LiveTileWinUI3.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveTileWinUI3.Pages"
    xmlns:Proj="using:LiveTileWinUI3"
    xmlns:Utility="using:LiveTileWinUI3.Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:CommunityToolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="32">Settings</TextBlock>
        <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 16">
            <StackPanel x:Name="settingsCards" Orientation="Vertical">
                <CommunityToolkit:SettingsCard Header="Application logs">
                    <CommunityToolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE77C;" />
                    </CommunityToolkit:SettingsCard.HeaderIcon>
                    <Button x:Name="showLogWindow" Click="showLogWindow_Click" Content="Show Log Window" />
                </CommunityToolkit:SettingsCard>
                <CommunityToolkit:SettingsCard Header="Reset all settings">
                    <CommunityToolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE74D;" />
                    </CommunityToolkit:SettingsCard.HeaderIcon>
                    <Button x:Name="resetAll" Style="{StaticResource RedButtonStyle}" CornerRadius="4" Content="Reset">
                        <Button.Flyout>
                            <Flyout>
                                <StackPanel>
                                    <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Text="All settings except apperance will be restore to default" Margin="0,0,0,12" />
                                    <Button Click="resetAll_Click" Content="Confirm" Style="{StaticResource RedButtonStyle}" CornerRadius="4"/>
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </CommunityToolkit:SettingsCard>
                <TextBlock FontWeight="Bold">Appearance</TextBlock>
                <CommunityToolkit:SettingsCard Header="Language 语言">
                    <CommunityToolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xF2B7;" />
                    </CommunityToolkit:SettingsCard.HeaderIcon>
                    <ComboBox x:Name="languageCombo">
                        <x:String>en-US  English</x:String>
                        <x:String>zh-CN  简体中文</x:String>
                    </ComboBox>
                </CommunityToolkit:SettingsCard>
                <CommunityToolkit:SettingsExpander Header="Application Style" Description="Personalize style preferences">
                    <CommunityToolkit:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE790;" />
                    </CommunityToolkit:SettingsExpander.HeaderIcon>
                    <CommunityToolkit:SettingsExpander.Items>
                        <CommunityToolkit:SettingsCard Header="Navigation style">
                    <CommunityToolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xF594;" />
                    </CommunityToolkit:SettingsCard.HeaderIcon>
                    <ComboBox x:Name="paneDisplayModeCombo" SelectedItem="{x:Bind Proj:App.mainWindow.PaneDisplayMode, Mode=TwoWay}" />
                </CommunityToolkit:SettingsCard>
                        <CommunityToolkit:SettingsCard Header="Backdrop type">
                    <CommunityToolkit:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xEF1F;" />
                    </CommunityToolkit:SettingsCard.HeaderIcon>
                    <ComboBox x:Name="backdropCombo" SelectedItem="{x:Bind Proj:App.mainWindow.BackdropType, Mode=TwoWay}"/>
                </CommunityToolkit:SettingsCard>
                        <CommunityToolkit:SettingsCard Header="App Theme">
                            <CommunityToolkit:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE793;" />
                            </CommunityToolkit:SettingsCard.HeaderIcon>
                            <ComboBox x:Name="themeSelectorCombo" SelectedItem="{x:Bind Proj:App.mainWindow.Theme, Mode=TwoWay}" />
                        </CommunityToolkit:SettingsCard>
                    </CommunityToolkit:SettingsExpander.Items>
                </CommunityToolkit:SettingsExpander>

                <TextBlock FontWeight="Bold" Margin="2 32 0 4">About this App</TextBlock>
                <Expander HorizontalAlignment="Stretch" Margin="0 0 0 32">
                    <Expander.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="32"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.RowSpan="2" Glyph="&#xECAA;" Margin="0 0 16 0"/>
                            <TextBlock VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch">
                            Windows Custom Tile
                            </TextBlock>
                            <TextBlock VerticalAlignment="Top" Grid.Column="1" Foreground="Gray" FontSize="12" Grid.Row="1">
                            ©fischldesu 2025
                            </TextBlock>
                            <TextBlock x:Name="versionInfo" Grid.Column="2" Grid.RowSpan="2" Foreground="Gray" VerticalAlignment="Center">
                                <Run Text="{x:Bind Utility:Settings.Version.Major}" />.<Run Text="{x:Bind Utility:Settings.Version.Minor}" />.<Run Text="{x:Bind Utility:Settings.Version.Build}" />
                                <Run x:Name="spVersion" />
                            </TextBlock>
                        </Grid>
                    </Expander.Header>
                    <Expander.Content>
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray">This software is released under the MIT License.</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock VerticalAlignment="Center">
                                Source code repo
                                </TextBlock>
                                <HyperlinkButton VerticalAlignment="Center" NavigateUri="https://github.com/fischldesu/WindowsCustomTile">
                                    github.com/fischldesu/WindowsCustomTile
                                </HyperlinkButton>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray" Margin="0 8 0 0" Padding="0 8 0 0">Develop blog passage</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <HyperlinkButton VerticalAlignment="Center" NavigateUri="https://blog.fischldesu.com/?p=windows-live-tile">
                                    blog.fischldesu.com/?p=windows-live-tile
                                </HyperlinkButton>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray" Margin="0 8 0 0" Padding="0 8 0 0">Dependencies &amp; Reference</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <HyperlinkButton Content="Windows App SDK" NavigateUri="https://aka.ms/windowsappsdk"/>
                                <HyperlinkButton Content="WinUI 3" NavigateUri="https://github.com/microsoft/microsoft-ui-xaml"/>
                                <HyperlinkButton Content="Windows Community Toolkit" NavigateUri="https://aka.ms/toolkit/windows"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Content>
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <HyperlinkButton Grid.Row="2" Content="fischldesu.com" NavigateUri="http://fischldesu.com" />
    </Grid>
</Page>
