<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="LiveTileWinUI3.Pages.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiveTileWinUI3.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="32">Settings</TextBlock>
        <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 16">
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="Bold" Margin="2 32 0 4">About this App</TextBlock>
                <Expander HorizontalAlignment="Stretch">
                    <Expander.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="32"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.RowSpan="2" Glyph="&#xECAA;" Margin="0 0 16 0"/>
                            <TextBlock VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch">
                            Windows Custom Tile
                            </TextBlock>
                            <TextBlock VerticalAlignment="Top" Grid.Column="1" Foreground="Gray" FontSize="12" Grid.Row="1">
                            Â©fischldesu 2025
                            </TextBlock>
                            <TextBlock Grid.Column="2" Grid.RowSpan="2" Foreground="Gray" VerticalAlignment="Center">0.0.1(alpha)</TextBlock>
                        </Grid>
                    </Expander.Header>
                    <Expander.Content>
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray">This software is released under the MIT License.</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock VerticalAlignment="Center">
                                Source code repo
                                </TextBlock>
                                <HyperlinkButton VerticalAlignment="Center" NavigateUri="https://github.com/fischldesu/WindowsCustomTile">
                                    github.com/fischldesu/WindowsCustomTile
                                </HyperlinkButton>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray" Margin="0 8 0 0" Padding="0 8 0 0">Develop blog passage</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <HyperlinkButton VerticalAlignment="Center" NavigateUri="https://blog.fischldesu.com/?p=windows-live-tile">
                                    blog.fischldesu.com/?p=windows-live-tile
                                </HyperlinkButton>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray" Margin="0 8 0 0" Padding="0 8 0 0">Dependencies &amp; Reference</TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <HyperlinkButton Content="Windows App SDK" NavigateUri="https://aka.ms/windowsappsdk"/>
                                <HyperlinkButton Content="WinUI 3" NavigateUri="https://github.com/microsoft/microsoft-ui-xaml"/>
                                <HyperlinkButton Content="UWP Adaptive Tiles" NavigateUri="https://learn.microsoft.com/zh-cn/windows/uwp/launch-resume/create-adaptive-tiles"></HyperlinkButton>
                            </StackPanel>
                        </StackPanel>
                    </Expander.Content>
                </Expander>
            </StackPanel>
        </ScrollViewer>
        <HyperlinkButton Grid.Row="2" Content="fischldesu.com" NavigateUri="http://fischldesu.com" />
    </Grid>
</Page>
