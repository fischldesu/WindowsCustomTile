<?xml version="1.0" encoding="utf-8"?>

<Page
  x:Class="WCT_WinUI3.Pages.HTTPXmlServer"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:WCT_WinUI3.Pages"
  xmlns:Components="using:WCT_WinUI3.Components"
  xmlns:i18n="using:WCT_WinUI3.Utility.I18N"
  xmlns:Converter="using:WCT_WinUI3.Utility.Convert"
  xmlns:WindowsNotification="using:Windows.UI.Notifications"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" Loaded="Page_Loaded">
  <Page.Resources>
    <Converter:EnumToLocalizedStringConverter x:Key="EnumToStringConverter" />
  </Page.Resources>
  <local:PageTemplate x:Name="pageTemplate" Header="{x:Bind i18n:Lang.Text('Page_HTTPSrv_Title')}">
    <Grid ColumnSpacing="16">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <Border Grid.RowSpan="2" Style="{StaticResource BorderSectionStyle}">
        <ScrollViewer Name="ContentContainer" Padding="16">
          <StackPanel x:Name="inputStack" Orientation="Vertical" />
        </ScrollViewer>
      </Border>
      <StackPanel Name="RightPanelTop" Grid.Column="1" Orientation="Vertical" Spacing="8">
        <Button HorizontalAlignment="Stretch" x:Name="newItem" Click="newItem_Click"
                Content="{x:Bind i18n:Lang.Text('Button_Add')}" ToolTipService.ToolTip="New HTTP link inputer" />
        <Button HorizontalAlignment="Stretch" x:Name="randomize" Click="randomize_Click"
                Content="{x:Bind i18n:Lang.Text('G_Randomize')}" ToolTipService.ToolTip="Randomize entire list" />
      </StackPanel>
      <StackPanel Name="RightPanelBottom" Grid.Column="1" Grid.Row="1" Orientation="Vertical" Spacing="8">
        <Button x:Name="clear" Click="clear_Click" HorizontalAlignment="Stretch"
                Style="{StaticResource RedButtonStyle}" CornerRadius="4" ToolTipService.ToolTip="Clear all links"
                Content="{x:Bind i18n:Lang.Text('Button_Clear')}" />
      </StackPanel>
    </Grid>
    <local:PageTemplate.FooterContent>
      <Components:PageFooter>
        <Components:PageFooter.FrontContent>
          <Components:DocumentationDropdownButton Description="TileUpdater.StartPeriodicUpdate">
            <HyperlinkButton HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="API Reference 1"
                             NavigateUri="https://learn.microsoft.com/uwp/api/windows.ui.notifications.tileupdater.startperiodicupdate" />
            <HyperlinkButton HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="API Reference 2"
                             NavigateUri="https://learn.microsoft.com/uwp/api/windows.ui.notifications.tileupdater.startperiodicupdatebatch" />
            <HyperlinkButton HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="Use Guidelines"
                             NavigateUri="https://repo.fischldesu.com/WindowsCustomTile/wiki/pages#http-server" />
          </Components:DocumentationDropdownButton>
        </Components:PageFooter.FrontContent>
        <Components:PageFooter.RearContent>
          <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <ComboBox x:Name="updateRecurrence" Height="32" CornerRadius="6 0 0 6">
              <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="WindowsNotification:PeriodicUpdateRecurrence">
                  <TextBlock Text="{x:Bind Converter={StaticResource EnumToStringConverter}}" />
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="submit" Height="32" CornerRadius="0 6 6 0" Margin="-1 0 0 0" HorizontalAlignment="Right"
                    Style="{StaticResource AccentButtonStyle}" Click="submit_Click"
                    Content="{x:Bind i18n:Lang.Text('Button_Submit')}" />
          </StackPanel>
        </Components:PageFooter.RearContent>
      </Components:PageFooter>
    </local:PageTemplate.FooterContent>
  </local:PageTemplate>
</Page>