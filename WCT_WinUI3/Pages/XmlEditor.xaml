<?xml version="1.0" encoding="utf-8"?>

<Page
  x:Class="WCT_WinUI3.Pages.XmlEditor"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:WCT_WinUI3.Pages"
  xmlns:Components="using:WCT_WinUI3.Components"
  xmlns:i18n="using:WCT_WinUI3.Utility.I18N"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">

  <local:PageTemplate Header="{x:Bind i18n:Lang.Text('Page_XmlTextEditor_Title')}">
    <Components:TileXmlEditor x:Name="editor" Grid.Row="1" />
    <local:PageTemplate.FooterContent>
      <Components:PageFooter>
        <Components:PageFooter.FrontContent>
          <Components:DocumentationDropdownButton Description="TileUpdater.Update">
            <HyperlinkButton HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="API Reference"
                             NavigateUri="https://learn.microsoft.com/uwp/api/windows.ui.notifications.tileupdater.update" />
            <HyperlinkButton HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="Use Guidelines"
                             NavigateUri="https://repo.fischldesu.com/WindowsCustomTile/wiki/more#edit" />
          </Components:DocumentationDropdownButton>
        </Components:PageFooter.FrontContent>
        <Components:PageFooter.RearContent>
          <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
            <Button x:Name="ContinueInSchedulePage" Click="ContinueInSchedulePage_Click" Content="{x:Bind i18n:Lang.Text('G_ContinueInSchedulePage')}" />
            <Button x:Name="selectFile" Click="selectFile_Click" Content="{x:Bind i18n:Lang.Text('G_SelectXmlFile')}" />
            <Button x:Name="submit" Click="submit_Click" Content="{x:Bind i18n:Lang.Text('Button_Submit')}"
                    HorizontalAlignment="Right" Style="{StaticResource AccentButtonStyle}" />
          </StackPanel>
        </Components:PageFooter.RearContent>
      </Components:PageFooter>
    </local:PageTemplate.FooterContent>
  </local:PageTemplate>
</Page>