<?xml version="1.0" encoding="utf-8"?>

<Page
  x:Class="WCT_WinUI3.Pages.Settings"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:WCT_WinUI3.Pages"
  xmlns:Proj="using:WCT_WinUI3"
  xmlns:i18n="using:WCT_WinUI3.Utility.I18N"
  xmlns:Converter="using:WCT_WinUI3.Utility.Convert"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:CommunityToolkit="using:CommunityToolkit.WinUI.Controls"
  mc:Ignorable="d"
  Loaded="Page_Loaded">
  <Page.Resources>
    <Converter:EnumToLocalizedStringConverter x:Key="EnumToStringConverter" />
  </Page.Resources>
  <local:PageTemplate Header="{x:Bind i18n:Lang.Text('Settings_Title')}">
    <ScrollViewer x:Name="scroller" HorizontalAlignment="Stretch">
      <StackPanel x:Name="settingsCards" Orientation="Vertical">
        <CommunityToolkit:SettingsCard Header="{x:Bind i18n:Lang.Text('Settings_Log')}">
          <CommunityToolkit:SettingsCard.HeaderIcon>
            <FontIcon Glyph="&#xE77C;" />
          </CommunityToolkit:SettingsCard.HeaderIcon>
          <Button x:Name="showLogWindow" Click="showLogWindow_Click"
                  Content="{x:Bind i18n:Lang.Text('Settings_Log_OpenWindow')}" />
        </CommunityToolkit:SettingsCard>
        <CommunityToolkit:SettingsCard Header="{x:Bind i18n:Lang.Text('Settings_NoNotify')}">
          <CommunityToolkit:SettingsCard.HeaderIcon>
            <FontIcon Glyph="&#xE8BD;" />
          </CommunityToolkit:SettingsCard.HeaderIcon>
          <ToggleSwitch IsOn="{Binding NoNotification, Mode=TwoWay}" />
        </CommunityToolkit:SettingsCard>
        <CommunityToolkit:SettingsCard>
          <CommunityToolkit:SettingsCard.Header>
            <StackPanel Orientation="Horizontal" Spacing="8" Padding="0 -4 0 0">
              <TextBlock Text="{x:Bind i18n:Lang.Text('Settings_AutoTileQueue')}" VerticalAlignment="Center" />
              <HyperlinkButton VerticalAlignment="Center" Padding="4" Margin="0 2 0 0">
                <FontIcon Glyph="&#xE946;" FontSize="14" />
              </HyperlinkButton>
            </StackPanel>
          </CommunityToolkit:SettingsCard.Header>
          <CommunityToolkit:SettingsCard.HeaderIcon>
            <FontIcon Glyph="&#xE8BD;" />
          </CommunityToolkit:SettingsCard.HeaderIcon>
          <StackPanel Orientation="Horizontal" Spacing="-1" >
            <Button Click="Button_Click" Tag="Open" Content="{x:Bind i18n:Lang.Text('G_Open')}" CornerRadius="4 0 0 4" />
            <Button Click="Button_Click" Tag="Close" Content="{x:Bind i18n:Lang.Text('G_Close')}" CornerRadius="0 4 4 0" />
          </StackPanel>
        </CommunityToolkit:SettingsCard>
        <CommunityToolkit:SettingsCard Header="{x:Bind i18n:Lang.Text('Settings_Reset')}">
          <CommunityToolkit:SettingsCard.HeaderIcon>
            <FontIcon Glyph="&#xE74D;" />
          </CommunityToolkit:SettingsCard.HeaderIcon>
          <Button x:Name="resetAll" Style="{StaticResource RedButtonStyle}" CornerRadius="4"
                  Content="{x:Bind i18n:Lang.Text('Settings_Reset_Opt')}">
            <Button.Flyout>
              <Flyout>
                <StackPanel>
                  <TextBlock Style="{ThemeResource BaseTextBlockStyle}"
                             Text="{x:Bind i18n:Lang.Text('Settings_Reset_ConfirmText')}" Margin="0,0,0,12" />
                  <Button Click="resetAll_Click" Content="{x:Bind i18n:Lang.Text('Button_Confirm')}"
                          Style="{StaticResource RedButtonStyle}" CornerRadius="4" />
                </StackPanel>
              </Flyout>
            </Button.Flyout>
          </Button>
        </CommunityToolkit:SettingsCard>
        <TextBlock Margin="2" FontWeight="Bold" Text="{x:Bind i18n:Lang.Text('Settings_Appearance')}" />
        <CommunityToolkit:SettingsCard Header="Language 语言">
          <CommunityToolkit:SettingsCard.HeaderIcon>
            <FontIcon Glyph="&#xF2B7;" />
          </CommunityToolkit:SettingsCard.HeaderIcon>
          <StackPanel Orientation="Horizontal" Spacing="8">
            <Button x:Name="restart" Visibility="Collapsed" Height="32" Padding="8 0">
              <FontIcon Glyph="&#xE72C;" />
              <Button.Flyout>
                <Flyout>
                  <StackPanel>
                    <TextBlock Style="{ThemeResource BaseTextBlockStyle}"
                               Text="{x:Bind i18n:Lang.Text('Settings_Restart_ConfirmText')}" Margin="0,0,0,12" />
                    <Button x:Name="restartConfirm" Click="restart_Click"
                            Content="{x:Bind i18n:Lang.Text('Button_Confirm')}" Style="{StaticResource RedButtonStyle}"
                            CornerRadius="4" />
                  </StackPanel>
                </Flyout>
              </Button.Flyout>
            </Button>
            <ComboBox x:Name="languageCombo" SelectionChanged="languageCombo_SelectionChanged">
              <x:String>Default</x:String>
              <x:String>English</x:String>
              <x:String>简体中文</x:String>
            </ComboBox>
          </StackPanel>
        </CommunityToolkit:SettingsCard>
        <CommunityToolkit:SettingsExpander Header="{x:Bind i18n:Lang.Text('Settings_Appearance_Style')}"
                                           Description="{x:Bind i18n:Lang.Text('Settings_Appearence_Style_Tip')}">
          <CommunityToolkit:SettingsExpander.HeaderIcon>
            <FontIcon Glyph="&#xE790;" />
          </CommunityToolkit:SettingsExpander.HeaderIcon>
          <CommunityToolkit:SettingsExpander.Items>
            <CommunityToolkit:SettingsCard Header="{x:Bind i18n:Lang.Text('Settings_Appearance_Style_NavStyle')}">
              <CommunityToolkit:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xF594;" />
              </CommunityToolkit:SettingsCard.HeaderIcon>
              <ComboBox x:Name="paneDisplayModeCombo"
                        SelectedItem="{x:Bind Proj:App.mainWindow.PaneDisplayMode, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                  <DataTemplate x:DataType="NavigationViewPaneDisplayMode">
                    <TextBlock Text="{x:Bind Converter={StaticResource EnumToStringConverter}}" />
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>
            </CommunityToolkit:SettingsCard>
            <CommunityToolkit:SettingsCard Header="{x:Bind i18n:Lang.Text('Settings_Appearance_Style_Backdrop')}">
              <CommunityToolkit:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xEF1F;" />
              </CommunityToolkit:SettingsCard.HeaderIcon>
              <ComboBox x:Name="backdropCombo" SelectedItem="{x:Bind Proj:App.mainWindow.BackdropType, Mode=TwoWay}" />
            </CommunityToolkit:SettingsCard>
            <CommunityToolkit:SettingsCard Header="{x:Bind i18n:Lang.Text('Settings_Appearance_Style_Theme')}">
              <CommunityToolkit:SettingsCard.HeaderIcon>
                <FontIcon Glyph="&#xE793;" />
              </CommunityToolkit:SettingsCard.HeaderIcon>
              <ComboBox x:Name="themeSelectorCombo" ItemsSource="{x:Bind ThemeOptions}" DisplayMemberPath="DisplayName"
                        SelectedValuePath="ThemeValue" SelectedValue="{x:Bind Proj:App.mainWindow.Theme, Mode=TwoWay}" />
            </CommunityToolkit:SettingsCard>
          </CommunityToolkit:SettingsExpander.Items>
        </CommunityToolkit:SettingsExpander>

        <TextBlock FontWeight="Bold" Margin="2 32 0 4" Text="{x:Bind i18n:Lang.Text('Settings_About')}" />
        <Expander SizeChanged="aboutExpander_SizeChanged" Collapsed="aboutExpander_Fold" HorizontalAlignment="Stretch"
                  Margin="0 0 0 32">
          <Expander.Header>
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="32" />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
              </Grid.ColumnDefinitions>
              <FontIcon Grid.RowSpan="2" Glyph="&#xECAA;" Margin="0 0 16 0" />
              <TextBlock VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch">
                Windows Custom Tile
              </TextBlock>
              <TextBlock VerticalAlignment="Top" Grid.Column="1" Foreground="Gray" FontSize="12" Grid.Row="1">
                ©fischldesu 2025
              </TextBlock>
              <TextBlock x:Name="versionInfo" Grid.Column="2" Grid.RowSpan="2" Foreground="Gray"
                         VerticalAlignment="Center">
                <Run x:Name="VersionMajor" />.<Run x:Name="VersionMinor" />.<Run x:Name="VersionBuild" />
                <Run x:Name="SpVersion" />
              </TextBlock>
            </Grid>
          </Expander.Header>
          <Expander.Content>
            <StackPanel HorizontalAlignment="Stretch">
              <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray">This software is released under the MIT License.</TextBlock>
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock VerticalAlignment="Center">
                  Source code repo
                </TextBlock>
                <HyperlinkButton VerticalAlignment="Center"
                                 NavigateUri="https://github.com/fischldesu/WindowsCustomTile">
                  github.com/fischldesu/WindowsCustomTile
                </HyperlinkButton>
              </StackPanel>
              <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray" Margin="0 8 0 0"
                         Padding="0 8 0 0" Text="{x:Bind i18n:Lang.Text('Settings_About_DevBlog')}" />
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <HyperlinkButton VerticalAlignment="Center"
                                 NavigateUri="https://blog.fischldesu.com/?p=windows-live-tile">
                  blog.fischldesu.com/?p=windows-live-tile
                </HyperlinkButton>
              </StackPanel>
              <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray" Margin="0 8 0 0"
                         Padding="0 8 0 0">
                Dependencies &amp; Reference
              </TextBlock>
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <HyperlinkButton Content="Windows App SDK" NavigateUri="https://aka.ms/windowsappsdk" />
                <HyperlinkButton Content="WinUI 3" NavigateUri="https://github.com/microsoft/microsoft-ui-xaml" />
                <HyperlinkButton Content="Windows Community Toolkit" NavigateUri="https://aka.ms/toolkit/windows" />
              </StackPanel>
            </StackPanel>
          </Expander.Content>
        </Expander>
      </StackPanel>
    </ScrollViewer>
    <local:PageTemplate.FooterContent>
      <HyperlinkButton Grid.Row="2" Content="fischldesu.com" NavigateUri="https://fischldesu.com" />
    </local:PageTemplate.FooterContent>
  </local:PageTemplate>
</Page>