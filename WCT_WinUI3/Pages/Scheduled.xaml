<?xml version="1.0" encoding="utf-8"?>

<Page
  x:Class="WCT_WinUI3.Pages.Scheduled"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:WCT_WinUI3.Pages"
  xmlns:Components="using:WCT_WinUI3.Components"
  xmlns:i18n="using:WCT_WinUI3.Utility.I18N"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" Loaded="Page_Loaded">

  <local:PageTemplate Header="{x:Bind i18n:Lang.Text('Page_Scheduled_Title')}">
    <Grid ColumnSpacing="16" AllowDrop="True" Drop="File_Drop" DragOver="File_DragOver">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="auto" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="auto" />
      </Grid.RowDefinitions>
      <Border Grid.RowSpan="2" Style="{StaticResource BorderSectionStyle}">
        <TabView x:Name="items" AddTabButtonClick="items_AddTabButtonClick" SelectionChanged="items_SelectionChanged"
                 VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
      </Border>
      <StackPanel Name="RightPanelTop" Grid.Column="1" Orientation="Vertical" Spacing="8">
        <Button x:Name="selectFile" Click="selectFile_Click" HorizontalAlignment="Stretch"
                Content="{x:Bind i18n:Lang.Text('G_SelectXmlFile')}" />
        <Button x:Name="randomize" Click="randomize_Click" HorizontalAlignment="Stretch"
                ToolTipService.ToolTip="Randomize list on the left" Content="{x:Bind i18n:Lang.Text('G_Randomize')}" />
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Visibility="Collapsed" x:Name="XmlFileFolderOperationGroup">
          <Button x:Name="LoadXmlsFromFile" Click="LoadXmlsFromFile_Click" HorizontalAlignment="Stretch"  Margin="0 0 0 -1"
                Content="{x:Bind i18n:Lang.Text('Page_Scheduled_LoadXmlFile')}" CornerRadius="4 4 0 0" />
          <Button x:Name="OpenXmlsFolder" Click="OpenXmlsFolder_Click" HorizontalAlignment="Stretch"
                Content="{x:Bind i18n:Lang.Text('Page_Scheduled_OpenXmlFolder')}" CornerRadius="0 0 4 4" />
        </StackPanel>
      </StackPanel>
      <StackPanel Name="RightPanelBottom" Grid.Column="1" Grid.Row="1" Orientation="Vertical" Spacing="8">
        <Button Grid.Row="1" x:Name="clear" Click="clear_Click" HorizontalAlignment="Stretch"
                ToolTipService.ToolTip="Clear all xml text" Style="{StaticResource RedButtonStyle}" CornerRadius="4"
                Content="{x:Bind i18n:Lang.Text('Button_Clear')}" />
      </StackPanel>
    </Grid>
    <local:PageTemplate.FooterContent>
      <Components:PageFooter>
        <Components:PageFooter.FrontContent>
          <Components:DocumentationDropdownButton Description="Schedule a Update task">
            <HyperlinkButton HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="IBackgroundTask API"
                             NavigateUri="https://learn.microsoft.com/uwp/api/windows.applicationmodel.background.ibackgroundtask" />
            <HyperlinkButton HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Content="Use Guidelines"
                             NavigateUri="https://repo.fischldesu.com/WindowsCustomTile/wiki/more#schedule" />
          </Components:DocumentationDropdownButton>
        </Components:PageFooter.FrontContent>
        <Components:PageFooter.RearContent>
          <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="12">
            <StackPanel Orientation="Horizontal">
              <ProgressRing x:Name="ProcessingRing" IsActive="False" Visibility="Collapsed" Height="20" Width="20"/>
              <Button x:Name="CancelTaskButton" Click="CancelTaskButton_Click" Content="{x:Bind i18n:Lang.Text('Page_Scheduled_CancelTask')}" />
            </StackPanel>
            <Button x:Name="submit" Height="32" Click="submit_Click" Style="{StaticResource AccentButtonStyle}"
                    Content="{x:Bind i18n:Lang.Text('Button_Submit')}" />
          </StackPanel>
        </Components:PageFooter.RearContent>
      </Components:PageFooter>
    </local:PageTemplate.FooterContent>
  </local:PageTemplate>
</Page>